<h1>Sign In</h1>
<!-- need to use form_for -->
<%= form_tag signin_path, method: :post, authenticity_token: true do %>
  <%= label_tag :name, "Username" %>
  <%= text_field_tag :name %><br>
  <%= label_tag :password, "Password" %>
  <%= password_field_tag :password %><br>
  <%= submit_tag "Sign In" %><br>
<% end %>

<p>Don't have an account?</p>
<%= link_to "Sign Up", signup_path %><br>
<%= link_to "Sign Up With Facebook", '/auth/facebook' %>