<h1>Welcome to Spell Cats</h1>
<p>A dungeon cat crawler</p>

<% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>
  <h2>Facebook UID: <%= @user.uid %></h2>
  <img src="<%= @user.image %>">
  <!-- create a cat -->
<% else %>
  <%= link_to 'Create an Account', signup_path %><br>
  <%= link_to 'Login', signin_path %><br>
  <%= link_to('Log in with Facebook', '/auth/facebook') %>
<% end %>
