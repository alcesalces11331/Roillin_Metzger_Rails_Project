<h1>Welcome to Spell Cats</h1>
<p>A dungeon cat crawler</p>

<% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>

  <!-- links to either create a cat or view your cats -->
  <% if !@user.cats %>
    <%= link_to "Create a Spell-Cat", new_user_cat_path %>
  <% else %>
    <%= link_to "Create a Spell-Cat", new_user_cat_path(@user) %><br>
    <%= link_to "Your Spell-Cats", user_cats_path(@user) %>
  <% end %>

<% else %>
  <%= link_to 'Create an Account', signup_path %><br>
  <%= link_to 'Login', signin_path %><br>
  <%= link_to('Log in with Facebook', '/auth/facebook') %>
<% end %>
