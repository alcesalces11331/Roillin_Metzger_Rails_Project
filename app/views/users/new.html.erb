<h1>Sign Up</h1>
<!-- need to use form_for -->

<%= form_tag signup_path, method: :post, authenticity_token: true do %>
  <%= label_tag :name, "Username" %>
  <%= text_field_tag :name %>
  <%= label_tag :email, "Email" %>
  <%= text_field_tag :email %>
  <%= label_tag :password, "Password" %><br>
  <%= password_field_tag :password %><br>
  <%= submit_tag "Sign Up" %>
<% end %>
