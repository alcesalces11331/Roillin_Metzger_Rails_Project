<%= form_for @spell, url: {action: "update"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_field :description %><br>
  <%= f.label :power_type %>
  <%= f.text_field :power_type %><br>
  <%= f.label :power_level %>
  <%= f.number_field :power_level %><br>
  <%= f.submit "Edit #{@spell.name}" %>
<% end %>
